<% layout("/layouts/boilerplate") %>
<body>
<div class="row">
  <div class="col-8 offset-2">

    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title"class="form-lable">Title</label>
        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required />
        <div class="invalid-feedback">title should be required</div>
      </div>

      <div class="mb-3">
        <label for=" description"class="form-lable"> Description</label>
        <textarea name="listing[description]" class="form-control"  required><%= listing.description %></textarea>
        <div class="invalid-feedback">Description should be required</div>
       </div>

       <div class="mb-3">
        <h3>Original Image</h3>
        
        
       <img src="<%=originalImageUrl %>" alt="update image">
       </div>
      
      <div class="mb-3">
        <label for=" image"class="form-lable">upload Image </label>
        <input name="listing[image]"  type="file" class="form-control"/>
        <div class="invalid-feedback"> image should be  required</div>
      </div>

  <div class="mb-3">
    <label for=" price"class="form-lable"> Price</label>
    <input name="listing[price]" value="<%= listing.price %>" type="number"  class="form-control"  required/>
    <div class="invalid-feedback"> Price should be valid or required</div>
  </div>
      
  <div class="mb-3">
    <label for=" country"class="form-lable">country</label>
    <input name="listing[country]" value="<%= listing.country %>" type="text"  class="form-control"  required/>
    <div class="invalid-feedback"> country name should be required</div>
  </div>
   
  <div class="mb-3">
    <label for=" location"class="form-lable">location</label>
    <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control"  required/>
    <div class="invalid-feedback"> location name should be required</div>
  </div>
    <br>
      <button class="btn btn-dark edit-btn">Edit</button>
    </form>
  </div>
  </div>
</body>
