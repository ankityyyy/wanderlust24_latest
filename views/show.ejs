<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-6 offset-3">


  <h2> <%= listing.title %></h2>
</div>

  <div class="card col-6 offset-2 listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top Show-img" alt="listing-image">
<div class="card-body">
  <p class="card-text">
      <br>
   
      <%= listing.description %>
<br>
&#8377; <%= listing.price.toLocaleString("en-IN") %>
<br>
<%= listing.location %>
    <br>
    <%= listing.country %>
    <br>

  </p>
 
</div>
  </div>

  <br />
  <div class="btn1">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>
      <br /><br />
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="btn btn-dark  offset-1">
        <button>Delete </button>
      </form>
  
  </div>

<hr>

  <div class="col-6 offset-2 mb-3">
    <h4>Leave a Review</h4>
    <form method="post" action="/listings/<%=listing._id  %>/reviews" novalidate class="needs-validation">
      <div class="mt-3 mb-3">
        <label for="rating"class="form-lable"> Rating</label>
        <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
      </div>
      <div>
        <label for="comment" class="form-lable">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required ></textarea>
      </div>
      <br>
      <br>
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr>

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews){ %>
       <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">Jan Doe</h5>
          <p class="card-title"> <%=  review.comment%></p>
          <p class="card-title"> <%=  review.rating %> stars</p>
          <form class="mb-3" method="post"  action="/listings/<%=listing._id %>/reviews/<%=review._id %>?_method=DELETE">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
       </div>
       <% } %>
    </div>




   
  </div>
  </div>
  <br>
  <br>
